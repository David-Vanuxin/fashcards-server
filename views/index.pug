extends layout

block content
	h1 Все модули
	if modules.length != 0
		each m in modules
			if m.length != 0 
				table
					caption #{m.name}
						//- a.link.show-buttons(style="margin-left: 1rem;") Показать кнопки
						//- a.link.show-all(style="margin-left: 1rem;", hidden) Показать все
					each task in m.data
						tr
							td #{task.q}
							td #{task.a}
			else
				p Модуль пуст
	else
		p Модулей нет
	div.buttons-wrapper
		a(href='/add', class="button") Новый модуль

